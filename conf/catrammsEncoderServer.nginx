
	access_log   /var/catramms/logs/nginx/mms-encoder.access.log main;
	error_log    /var/catramms/logs/nginx/mms-encoder.error.log error;

	#https://www.keycdn.com/support/nginx-location-directive
	#match qualunque URL o URI che inizia con /catramms
	location /catramms {
		#Uso una coda "minima" per gestire le richieste contemporanee.
		#Non userei il nodelay in modo che le richieste vengono evase secondo il rate indicato in nginx.conf
		#Nota: parliamo dello stesso IP.
		limit_req zone=mmsEncoderLimit burst=20;

		if ($request_method = GET) {
			rewrite ^/catramms/(v[0-9]+)/encoder/status/?$ /encoder?x-api-version=$1&x-api-method=status last;
		}
		if ($request_method = GET) {
			rewrite ^/catramms/(v[0-9]+)/encoder/info/?$ /encoder?x-api-version=$1&x-api-method=info last;
		}
		if ($request_method = POST) {
			rewrite ^/catramms/(v[0-9]+)/encoder/encode/([0-9]+)/([0-9]+)/?$ /encoder?x-api-version=$1&x-api-method=encodeContent&ingestionJobKey=$2&encodingJobKey=$3 last;
		}
		if ($request_method = POST) {
			rewrite ^/catramms/(v[0-9]+)/encoder/overlayImageOnVideo/([0-9]+)/([0-9]+)/?$ /encoder?x-api-version=$1&x-api-method=overlayImageOnVideo&ingestionJobKey=$2&encodingJobKey=$3 last;
		}
		if ($request_method = POST) {
			rewrite ^/catramms/(v[0-9]+)/encoder/overlayTextOnVideo/([0-9]+)/([0-9]+)/?$ /encoder?x-api-version=$1&x-api-method=overlayTextOnVideo&ingestionJobKey=$2&encodingJobKey=$3 last;
		}
		if ($request_method = POST) {
			rewrite ^/catramms/(v[0-9]+)/encoder/generateFrames/([0-9]+)/([0-9]+)/?$ /encoder?x-api-version=$1&x-api-method=generateFrames&ingestionJobKey=$2&encodingJobKey=$3 last;
		}
		if ($request_method = POST) {
			rewrite ^/catramms/(v[0-9]+)/encoder/slideShow/([0-9]+)/([0-9]+)/?$ /encoder?x-api-version=$1&x-api-method=slideShow&ingestionJobKey=$2&encodingJobKey=$3 last;
		}
		if ($request_method = POST) {
			rewrite ^/catramms/(v[0-9]+)/encoder/liveRecorder/([0-9]+)/([0-9]+)/?$ /encoder?x-api-version=$1&x-api-method=liveRecorder&ingestionJobKey=$2&encodingJobKey=$3 last;
			rewrite ^/catramms/(v[0-9]+)/encoder/liveRecorder/([0-9]+)/?$ /encoder?x-api-version=$1&x-api-method=liveRecorder&ingestionJobKey=-1&encodingJobKey=$2 last;
		}
		if ($request_method = POST) {
			rewrite ^/catramms/(v[0-9]+)/encoder/liveProxy/([0-9]+)/([0-9]+)/?$ /encoder?x-api-version=$1&x-api-method=liveProxy&ingestionJobKey=$2&encodingJobKey=$3 last;
			rewrite ^/catramms/(v[0-9]+)/encoder/liveProxy/([0-9]+)/?$ /encoder?x-api-version=$1&x-api-method=liveProxy&ingestionJobKey=-1&encodingJobKey=$2 last;
		}
		if ($request_method = POST) {
			rewrite ^/catramms/(v[0-9]+)/encoder/liveGrid/([0-9]+)/([0-9]+)/?$ /encoder?x-api-version=$1&x-api-method=liveGrid&ingestionJobKey=$2&encodingJobKey=$3 last;
		}
		if ($request_method = POST) {
			rewrite ^/catramms/(v[0-9]+)/encoder/videoSpeed/([0-9]+)/([0-9]+)/?$ /encoder?x-api-version=$1&x-api-method=videoSpeed&ingestionJobKey=$2&encodingJobKey=$3 last;
		}
		if ($request_method = POST) {
			rewrite ^/catramms/(v[0-9]+)/encoder/addSilentAudio/([0-9]+)/([0-9]+)/?$ /encoder?x-api-version=$1&x-api-method=addSilentAudio&ingestionJobKey=$2&encodingJobKey=$3 last;
		}
		if ($request_method = POST) {
			rewrite ^/catramms/(v[0-9]+)/encoder/pictureInPicture/([0-9]+)/([0-9]+)/?$ /encoder?x-api-version=$1&x-api-method=pictureInPicture&ingestionJobKey=$2&encodingJobKey=$3 last;
		}
		if ($request_method = POST) {
			rewrite ^/catramms/(v[0-9]+)/encoder/introOutroOverlay/([0-9]+)/([0-9]+)/?$ /encoder?x-api-version=$1&x-api-method=introOutroOverlay&ingestionJobKey=$2&encodingJobKey=$3 last;
		}
		if ($request_method = POST) {
			rewrite ^/catramms/(v[0-9]+)/encoder/cutFrameAccurate/([0-9]+)/([0-9]+)/?$ /encoder?x-api-version=$1&x-api-method=cutFrameAccurate&ingestionJobKey=$2&encodingJobKey=$3 last;
		}
		if ($request_method = GET) {
			rewrite ^/catramms/(v[0-9]+)/encoder/progress/([0-9]+)/?$ /encoder?x-api-version=$1&x-api-method=encodingProgress&encodingJobKey=$2 last;
		}
		if ($request_method = GET) {
			rewrite ^/catramms/(v[0-9]+)/encoder/status/([0-9]+)/([0-9]+)/?$ /encoder?x-api-version=$1&x-api-method=encodingStatus&ingestionJobKey=$2&encodingJobKey=$3 last;
		}
		if ($request_method = DELETE) {
			rewrite ^/catramms/(v[0-9]+)/encoder/([0-9]+)/([0-9]+)/?$ /encoder?x-api-version=$1&x-api-method=killEncodingJob&ingestionJobKey=$2&encodingJobKey=$3 last;
		}
		if ($request_method = PUT) {
			rewrite ^/catramms/(v[0-9]+)/encoder/liveProxy/playlist/([0-9]+)/?$ /encoder?x-api-version=$1&x-api-method=changeLiveProxyPlaylist&encodingJobKey=$2 last;
			rewrite ^/catramms/(v[0-9]+)/encoder/liveProxy/overlayText/([0-9]+)/?$ /encoder?x-api-version=$1&x-api-method=changeLiveProxyOverlayText&encodingJobKey=$2 last;
		}
		if ($request_method = GET) {
			rewrite ^/catramms/(v[0-9]+)/encoder/filterNotification/([0-9]+)/([0-9]+)/?$ /encoder?x-api-version=$1&x-api-method=filterNotification&ingestionJobKey=$2&encodingJobKey=$3 last;
		}
	}

	#match qualunque URL o URI che inizia con /encoder
	location /encoder {
		internal;

		fastcgi_read_timeout 120;

		#the encoder fastcgi listen to 8020 port (see scripts/mmsEncoder.sh)
		fastcgi_pass   127.0.0.1:8020;
		include /opt/catramms/nginx/conf/fastcgi_params;
	}
